<%= render 'shared/vertical_menu' %>

<div class="category-wrapper" data-controller="service">
  <div class="category-header">
    <div class="category-title">
      <%= link_to "← Back", services_path, class: "back" %>
      Care Products
    </div>

    <%= render "services/menu" %>
  </div>

  <div id="service-list" class="service-list" data-service-target="list">
    <% @care_products.each do |care_product| %>
      <%= render "services/service_item", service: care_product %>
    <% end %>
  </div>

  <div class="create-button">
    <%= link_to "+ New Care Product", new_service_path(service_type: "care_product"), class: "button primary full" %>
  </div>
</div>
