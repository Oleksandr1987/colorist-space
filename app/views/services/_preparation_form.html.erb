<div class="service-form-wrapper">
  <%= form_with(model: service, url: create_preparation_services_path, local: true) do |f| %>
    <%= f.hidden_field :service_type, value: "preparation" %>

    <div class="form-section">
      <%= f.label :subtype, t("services.preparation_form.name") %>
      <%= f.text_field :subtype, class: "form-input", required: true %>
    </div>

    <div class="form-section">
      <%= f.label :price, t("services.preparation_form.price") %>
      <%= f.number_field :price, class: "form-input", required: true %>
    </div>

    <div class="form-section">
      <%= f.label :unit, t("services.preparation_form.unit") %>
      <%= f.select :unit,
            options_for_select([["Gram (g)", "g"], ["Milliliter (ml)", "ml"], ["Liter (l)", "l"]]),
            {},
            class: "form-input",
            required: true %>
    </div>

    <div class="form-actions-row">
      <%= f.submit t("services.form.save"), class: "form-button primary" %>
      <%= link_to t("services.preparation_form.cancel"),
            preparations_services_path,
            class: "form-button cancel",
            data: { turbo: false } %>
    </div>
  <% end %>
</div>
