<header class="header-bar" data-controller="menu">
  <h1 class="logo">Colorist Space</h1>
  <button data-action="click->menu#toggle" class="menu-toggle" aria-label="Toggle menu">&#9776;</button>
  <ul data-menu-target="menu" class="slider-menu">
    <% if current_user %>
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to "Profile", edit_user_registration_path %></li>
      <li><%= link_to "Calendar", '#' %></li>
      <li><%= button_to "Log Out", destroy_user_session_path, data:{turbo:"false"}, method: :delete %></li>
    <% else %>
      <li><%= link_to "Sign Up", new_user_registration_path %></li>
      <li><%= link_to "Log In", new_user_session_path %></li>
    <% end %>
  </ul>
</header>
