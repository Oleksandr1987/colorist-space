<div class="container">
  <div class="screen">
    <div class="screen__content">
      <h2><%= t("auth.forgot_password_title") %></h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="login__field">
         <%= f.email_field :email, class: "login__input", placeholder: t("auth.placeholder_email") %>
        </div>
        <div class="actions">
          <%= f.submit t("auth.send_reset_link"), class: "button reset__submit" %>
        </div>
        <div class="home-page__logo">
        <%= image_tag("logo_full_transpr.png", alt: "Colorist.Space", class: "logo-img") %>
      </div>
      <% end %>   
    </div>
  </div>
</div>