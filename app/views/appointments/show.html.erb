<h2>Appointment Details</h2>

<div class="appointment-details">
  <p><strong>Client:</strong> <%= @appointment.client.full_name %></p>
  <p><strong>Service:</strong> <%= @appointment.service_name %></p>
  <p><strong>Date:</strong> <%= @appointment.appointment_date.strftime("%d %B %Y") %></p>
  <p><strong>Time:</strong>
    <%= @appointment.appointment_time.strftime("%H:%M") %>
    <% if @appointment.end_time.present? %>
      - <%= @appointment.end_time.strftime("%H:%M") %>
    <% end %>
  </p>
  <p><strong>Status:</strong> <%= @appointment.status.capitalize %></p>
  <p><strong>Notes:</strong> <%= @appointment.notes %></p>

  <div class="actions">
    <%= link_to "Edit", edit_appointment_path(@appointment), class: "button edit" %>
    <%= button_to "Delete", appointment_path(@appointment),
          method: :delete,
          form: { data: { turbo_confirm: "Are you sure you want to delete this appointment?" } },
          class: "button delete" %>
    <%= link_to "Back", appointments_path, class: "button back" %>
  </div>
</div>
