<div class="appointment-details-header">
  <%= link_to "←", appointments_path, class: "back-button", title: "Back" %>
  <h1>Appointment Details</h1>
</div>

<div class="appointment-details">
  <p>Client: <strong><%= @appointment.client.full_name %> </strong></p>
  <p>Service: <strong><%= @appointment.service_name %></strong> </p>
  <p>Date: <strong><%= @appointment.appointment_date.strftime("%d %B %Y") %></strong> </p>
  <p>Time:<strong>
    <%= @appointment.appointment_time.strftime("%H:%M") %>
    <% if @appointment.end_time.present? %>
      – <%= @appointment.end_time.strftime("%H:%M") %>
    <% end %>
  </strong></p>
  <% if @appointment.notes.present? %>
    <p>Notes:<strong> <%= @appointment.notes %></strong></p>
  <% end %>

  <div class="action-buttons-inline">
    <%= link_to "Edit", edit_appointment_path(@appointment), class: "button small-button edit" %>
    <%= button_to "Delete", appointment_path(@appointment),
          method: :delete,
          form: { data: { turbo_confirm: "Are you sure?" } },
          class: "button small-button delete" %>
  </div>
</div>
