<h1>Appointments</h1>

<div class="appointment-list" data-controller="popover">
  <div class="form-actions" style="display: flex; gap: 1rem; margin-bottom: 1.5rem;">
    <%= link_to "New Appointment", new_appointment_path, class: "button primary full" %>
    <%= link_to "Calendar", calendar_appointments_path, class: "button primary full" %>
  </div>

  <% @appointments.each do |appointment| %>
    <div class="appointment-item">
      <div class="info">
        <div class="time">
          <%= appointment.appointment_time.strftime("%H:%M") %>
          <% if appointment.end_time.present? %>
            – <%= appointment.end_time.strftime("%H:%M") %>
          <% end %>
        </div>
        <div class="time">
          <%= appointment.appointment_date.strftime("%d %B %Y") %>
        </div>
        <div class="text"><%= appointment.client.full_name %> — <%= appointment.service_name %></div>
      </div>

      <div data-controller="popover" class="slot-icon-wrapper">
        <button class="popover-toggle" data-popover-target="button" data-action="click->popover#toggle">✎</button>
        <div class="popover-menu hidden" data-popover-target="menu">
          <%= link_to "✏️ Edit", edit_appointment_path(appointment) %>
          <%= button_to "🗑 Delete", appointment_path(appointment),
                method: :delete,
                form: { data: { turbo_confirm: "Are you sure you want to delete this appointment?" } },
                class: "menu-item delete-button" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
