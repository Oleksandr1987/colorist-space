<div data-controller="calendar-view" class="calendar-wrapper">
  <div class="calendar-header">
    <button class="nav-btn" data-action="click->calendar-view#prevMonth">←</button>
    <h2 data-calendar-view-target="monthLabel"></h2>
    <button class="nav-btn" data-action="click->calendar-view#nextMonth">→</button>
  </div>

  <div class="calendar-grid" data-calendar-view-target="calendarDays"></div>

  <div class="calendar-today-label" data-calendar-view-target="selectedDateLabel"></div>

  <div class="add-btn-wrapper">
    <%= link_to "Add Appointment", new_appointment_path, class: "button purple full" %>
  </div>

  <div class="timeline-wrapper">
    <h4>Appointments & Available Slots</h4>
    <div data-calendar-view-target="timeline" class="timeline"></div>
  </div>
</div>
