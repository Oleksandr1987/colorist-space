<div class="container">
  <div class="screen">
    <div class="screen__content">
      <div class="language-switcher top-right">
        <select class="language-select" onchange="window.location = '?locale=' + this.value;">
          <option value="uk" <%= 'selected' if I18n.locale == :uk %>>Українська</option>
          <option value="en" <%= 'selected' if I18n.locale == :en %>>English</option>
        </select>
      </div>

      <h2 class="login-title"><%= t("auth.login_title") %></h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login" }) do |f| %>

        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- Email or Phone -->
        <div class="login__field">
          <%= f.label :login, t("auth.email_or_phone") %>
          <%= f.text_field :login, class: "login__input", autofocus: true, autocomplete: "login" %>
        </div>

        <!-- Password -->
        <div class="login__field">
          <%= f.label :password, t("auth.password") %>
          <%= f.password_field :password, class: "login__input", autocomplete: "current-password" %>
        </div>

        <!-- Remember me -->
        <% if devise_mapping.rememberable? %>
          <div class="login__field remember-me">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, t("auth.remember_me") %>
          </div>
        <% end %>

        <!-- Login button -->
        <div class="actions">
          <%= f.submit t("auth.login"), class: "button login__submit" %>
        </div>

      <% end %>
      <!-- ====================== END FORM ====================== -->

      <!-- Forgot password -->
      <div class="forgot__password">
        <%= link_to t("auth.forgot_password"), new_password_path(resource_name), class: "forgot-password" %>
      </div>

      <!-- Social login -->
      <div class="social-login">
        <h3><%= t("auth.login_with") %></h3>
        <div class="social-icons">

          <%= button_to omniauth_authorize_path(:user, :facebook), data: { turbo: false } do %>
            <%= image_tag("social_icons/facebook.png", class: "social-login__icon") %>
          <% end %>

          <%= button_to omniauth_authorize_path(:user, :google_oauth2), data: { turbo: false } do %>
            <%= image_tag("social_icons/google_oauth2.png", class: "social-login__icon") %>
          <% end %>

          <%= button_to omniauth_authorize_path(:user, :instagram), data: { turbo: false } do %>
            <%= image_tag("social_icons/instagram.png", class: "social-login__icon") %>
          <% end %>

        </div>
      </div>

      <!-- Register -->
      <p class="home-register-label"><%= t("auth.need_register") %></p>
      <%= link_to t("auth.signup"), new_user_registration_path, class: "button signup__link" %>

      <!-- Logo -->
      <div class="home-logo">
        <%= image_tag("logo_full_transpr.png", alt: "Colorist.Space", class: "logo-img") %>
      </div>
    </div>
  </div>
</div>
